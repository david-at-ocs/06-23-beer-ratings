<h1>Delete Beer</h1>
<% if @error %>
  <h3>There was an error deleting the beer. Please try again.</h3>
<% end %>
<ul>
  <li><h3>Delete Beer</h3>
    <form action="/beer/delete_beer">
      <select name="beer_id">
        <% Beer.all.each do |beer| %>
          <option value="<%= beer.id %>"><%= beer.id %>. <%= beer.beer_name %></option>
        <% end %>
      </select>
      <input type="submit" value="Delete Beer">
    </form>
  </li>

<ul>
